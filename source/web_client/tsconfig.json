{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "isolatedModules": false,
        "jsx": "react",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./config/IInputDictionary.ts",
        "./config/inputEmitter.ts",
        "./config/keys.ts",
        "./config/mouse.ts",
        "./handler/playerhandler.tsx",
        "./index.tsx",
        "./pawns/player.tsx"
    ],
    "scripts": {
        "postbuild": "find . -type f -name '*.js' -delete -o -name '*.js.map' -delete"
    }
}
